<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edit_filter_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item"
        tools:context=".PrintsEditorActivity"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/content_space"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_br"
            android:layout_width="@dimen/icon_big_size"
            android:layout_height="@dimen/icon_big_size"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/ic_device_brightness_high" />

        <com.brainbeanapps.rosty.printseditordemo.ui.view.Slider
            android:id="@+id/slider_br"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:max="350"
            app:min="0"
            app:value="100"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_cn"
            android:layout_width="@dimen/icon_big_size"
            android:layout_height="@dimen/icon_big_size"
            android:layout_marginLeft="@dimen/margin"
            android:src="@drawable/ic_image_filter_b_and_w" />

        <com.brainbeanapps.rosty.printseditordemo.ui.view.Slider
            android:id="@+id/slider_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:max="150"
            app:min="0"
            app:value="50"/>
    </LinearLayout>

</LinearLayout>